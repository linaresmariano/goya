extends ../layout

block content
	script.
		function courses($scope){
			$scope.courses=!{JSON.stringify(courses)};
		}
	.container
		legend Seleccione un curso
		div( ng-controller="courses")
			div(ng-repeat='course in courses')
				div
					a.list-group-item {{course.subject.nick}} - {{course.subject.name}}
						button.btn.btn-xs.btn-info.pull-right.button-option
							span.glyphicon.glyphicon-edit
						button.btn.btn-xs.btn-danger.pull-right.button-option
							span.glyphicon.glyphicon-remove

		br
		a.btn.btn-success(href='../../../course/new')	Nuevo
  
  
