extends ../layout

block content

	script(src='/js/angular/controllers/subject/list.js')

	.container(ng-controller="listSubjectsCtrl" ng-init="subjects=#{JSON.stringify(subjects)}")

		div!= messages()

		legend Seleccione una materia

		div(ng-repeat='subject in subjects')
			div
				.list-group-item {{subject.name}} 
					a(ng-href='/subject/edit/{{subject.id}}')
						button.btn.btn-xs.btn-info.pull-right.button-option
							span.glyphicon.glyphicon-edit
					button.btn.btn-xs.btn-danger.pull-right.button-option(ng-click="remove(subject, $index)")
						span.glyphicon.glyphicon-remove

		br

		a.btn.btn-success(href='/subject/new') Nuevo

