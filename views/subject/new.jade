extends ../layout

block content

  script.
    
    app.controller('newSubjectCtrl', function ($scope, localStorageService) {

      $scope.areas = [
        {id:0, name:'Programación'},
        {id:1, name:'Sistemas Informáticos'},
        {id:2, name:'Matemática Básica'},
        {id:3, name:'Matemática Superior'},
        {id:4, name:'Idioma'}
      ]

      $scope.cores = [
        {id:0, name:'Básico Obligatorio'},
        {id:1, name:'Avanzado Obligatorio'},
        {id:2, name:'Complementaria'},
        {id:3, name:'Obligatoria'}
      ]

      $scope.modalities = [
        {id:0, name:'Presencial'},
        {id:1, name:'Presencial con campus virtual'},
        {id:2, name:'Virtual'}
      ]
      
    })

  .container(ng-controller='newSubjectCtrl')
    form(action="../subject/create",method="post")
      legend Nueva Materia para el semestre {{number}} de {{year}}
      div.col-md-6

        .form-group
          label(for='name') Nombre 
          input#name.form-control( placeholder='Nombre',name='name',required,maxlength='100')

        .form-group
          label(for='code') Sigla
          input#code.form-control(placeholder='Sigla', name='code', required, maxlength='12')

        .form-group
          label(for='area') Área
          select.form-control(ng-model="area", ng-options="area.name for area in areas")
            option(value="") Seleccione un área

        .form-group
          label(for='core') Núcleo
          select.form-control(ng-model="core", ng-options="core.name for core in cores")
            option(value="") Seleccione un núcleo

        .form-group
          label(for='pediod') Período
          input#period.form-control(value='Cuatrimestral', name='period', maxlength='100')

        .form-group
          label(for='modality') Modalidad
          select.form-control(ng-model="modality", ng-options="modality.name for modality in modalities")
            option(value="") Seleccione una modalidad

        .form-group
          label(for='ocode') Código de Asignatura
          input#name.form-control(placeholder='Código de asignatura', name='ocode', maxlength='100')

        .form-group
          label(for='credits') Créditos
          input#credits.form-control(placeholder='Créditos', name='credits', type='number')

        .form-group
          label(for='capacity') Capacidad
          input#capacity.form-control(placeholder='Capacidad', name='capacity', type='number')

        button.btn.btn-success(type="submit") Crear


